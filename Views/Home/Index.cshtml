@model List<Movie>
@{ 
    ViewBag.Title = "My Movies";
}
<h2>Movie List</h2>
<a asp-controller="Movie" asp-action="Add">Add New Movie</a>
<a asp-controller="Movie" asp-action="MovieQuote">Get Daily Quote</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Director</th>
            <th>Release Date</th>
            <th>Duration</th>
            <th></th>
        </tr>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.Year</td>
            <td>@movie.Genre.Name</td>
            <td>@movie.Rating</td>
            <td>@movie.Director</td>
            <td>@movie.ReleaseDate</td>
            <td>@movie.Duration</td>
            <td>
                <a asp-controller="Movie" asp-action="Edit"
                   asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Edit</a>
                <a asp-controller="Movie" asp-action="Delete"
                   asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Delete</a>
                <a asp-controller="Movie" asp-action="Trivia"
                   asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Trivia</a>
                <a asp-controller="Movie" asp-action="MovieQuote"
                   asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug">Movie Quote</a>
                </td>
            </tr>
            }
    </tbody>
</table>

